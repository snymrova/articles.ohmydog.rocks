{
  "site": {
    "title": "Share Your Dog Experiences",
    "base_url": "https://articles.ohmydog.rocks",
    "base_path": "/",
    "trailing_slash": false,
    "favicon": "/images/favicon.png",
    "logo": "/images/logo.png",
    "logo_darkmode": "/images/logo-darkmode.png",
    "logo_width": "150",
    "logo_height": "30",
    "logo_text": "Share Your Dog Experiences"
  },

  "settings": {
    "search": true,
    "sticky_header": true,
    "theme_switcher": true,
    "default_theme": "system",
    "pagination": 2,
    "summary_length": 200,
    "blog_folder": "blog",
    "default_language": "en",
    "disable_languages": [],
    "default_language_in_subdir": false
  },

  "params": {
    "contact_form_action": "#",
    "copyright": "Developed by [OhMyDog Rocks](https://zeon.studio)"
  },

  "navigation_button": {
    "enable": true,
    "label": "Start Sharing",
    "link": "https://github.com/zeon-studio/astroplate"
  },

  "disqus": {
    "enable": false,
    "shortname": "themefisher-template",
    "settings": {}
  },

  "metadata": {
    "meta_author": "OhMyDog Articles",
    "meta_image": "/images/og-image.png",
    "meta_description": "OhMyDog Articles is a free platform that makes it easy for you to share your dog stories and insights with a global community of dog lovers."
  }
}
